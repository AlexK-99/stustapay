{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Customer Portal",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "module": "stustapay",
      "justMyCode": true,
      "args": ["-c", "server.yaml", "-vvv", "customerportal-api"]
    },
    {
      "name": "Python: Administration Portal",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "module": "stustapay",
      "justMyCode": true,
      "args": ["-c", "server.yaml", "-vvv", "administration-api"]
    },
    {
      "name": "FestivalSimulator DB Setup",
      "type": "debugpy",
      "request": "launch",
      "module": "stustapay",
      "justMyCode": true,
      "args": ["-c", "server.yaml", "-vvv", "simulate", "setup"]
    },
    {
      "name": "FestivalSimulator Simulate API",
      "type": "debugpy",
      "request": "launch",
      "module": "stustapay",
      "justMyCode": false,
      "args": [
        "-vvv",
        "-c",
        "etc/config.devel.yaml",
        "simulate",
        "api",
        "--no-tse",
        "--no-bon"
      ]
    },
    {
      "name": "FestivalSimulator Simulate Festival",
      "type": "debugpy",
      "request": "launch",
      "module": "stustapay",
      "justMyCode": true,
      "args": ["-c", "server.yaml", "-vvv", "simulate", "start"]
    }
  ]
}
