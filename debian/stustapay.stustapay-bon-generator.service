[Unit]
Description=StuStaPay Bon Generator
After=postgresql.service

[Service]
ExecStartPre=/usr/bin/chown -R root:stustapay /etc/stustapay; /usr/bin/chmod u=rw,g=r,o= /etc/stustapay/config.yaml
ExecStart=/usr/lib/stustapay/venv/bin/stustapay bon
User=stustapay
Group=stustapay

[Install]
WantedBy=multi-user.target
